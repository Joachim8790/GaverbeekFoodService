@model De_Gaverbeek.Models.tblPosts

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutOther.cshtml";
}



@using (Html.BeginForm("Create", "Main1", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="page">
        <br />
        <div class="ui horizontal divider customdivider">
            Nieuws toevoegen
        </div>
        <div class="container">
        <div class="ui secondary raised segment">
            @Html.AntiForgeryToken()

            <div class="container-fluid" style="padding:0;">
                <div class="ui form form-horizontal">

                    <div class="col-lg-14 col-md-14">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="field form-group">
                            @Html.LabelFor(model => model.PostTitel, htmlAttributes: new { @class = "control-label col-md-2", @style = "color:#000;" })
                            @Html.EditorFor(model => model.PostTitel, new { htmlAttributes = new { @class = "form-control ui input",@id="txtTitel" } })
                            @Html.ValidationMessageFor(model => model.PostTitel, "", new { @class = "text-danger" })
                        </div>

                        <div class="field form-group">
                            @Html.LabelFor(model => model.PostText, htmlAttributes: new { @class = "control-label col-md-2", @style = "color:#000;" })
                            @Html.EditorFor(model => model.PostText, new { htmlAttributes = new { @class = "form-control ui input",@id = "txtBeschrijving" } })
                            @Html.ValidationMessageFor(model => model.PostText, "", new { @class = "text-danger" })
                        </div>

                        <div class="field form-group">
                            <input type="file" class="ui input" name="txtAfbeelding" id="txtAfbeelding" accept="application/vnd.openxmlformats-officedocument.presentationml.presentation,image/*,application/pdf" />
                        </div>
                        <div class="field form-group">

                            <input type="submit" value="Aanmaken" class="ui button" />
                        </div>
                        <div>
                            @Html.ActionLink("Terug naar het overzicht", "Index")
                        </div>
                    </div>
                </div>
                </div>
            </div>
        </div>
        </div>
            }


