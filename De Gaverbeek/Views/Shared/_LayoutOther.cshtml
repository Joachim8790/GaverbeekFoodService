<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>De Gaverbeek FoodService</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" id="scrollStart">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img  class="navbar-brand logo" src="~/Images/logo.PNG"/>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home","Index","Main",null, htmlAttributes: new { @id = "liHome" } )</li>
                    <li>@Html.ActionLink("Nieuws en Promoties", "Index", "Main", null, htmlAttributes: new { @id = "liNieuwsEnPromoties" })</li>
                    <li>@Html.ActionLink("Producten", "Index", "Main", null, htmlAttributes: new { @id = "liProducten" })</li>
                    <li>@Html.ActionLink("Contact", "Index", "Main", null, htmlAttributes: new { @id = "liContact" })</li>
                </ul>
                
                <ul style="padding-left:15px;" class="nav navbar-nav navbar-right">
                    <a style="margin-right:50px;" href="https://www.facebook.com/degaverbeek/" target="_blank"><i style="display:block;" class="circular inverted blue link facebook f icon"></i></a>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year De Gaverbeek - Development Joachim Verschelde</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
