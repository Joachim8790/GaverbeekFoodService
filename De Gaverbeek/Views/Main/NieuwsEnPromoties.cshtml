@model De_Gaverbeek.ViewModels.OverOnsViewModel

<div class="page" id="pageNieuwsEnPromoties">
        <br />
    <div class="bgnieuws"></div>

       <div class="ui raised segment" id="headerNieuws"style="margin-top:2%;">
           <div class="ui horizontal divider customdivider" style="margin-top:0;">
    Nieuws en Promoties
    </div>
       </div>
            
        <div class="ui container-fluid" id="post-container" >
            <div class="arrow-left"></div>
            <div class="arrow-right"></div>
            <div class="ui horizontal segments" id="posts">
                
                @foreach (var item in ViewBag.sortedPosts)
                {

                   
                        <div class="ui raised segment post">
                            
                                <div id="divAfbeelding">
                                    <img alt="" class="imageDisplay" src="data:image;base64,@System.Convert.ToBase64String(item.PostImage)" />
                                </div>

                                <h4 class="ui header" style="margin-top:5px">
                                    <i class="quote left icon"></i>
                                    <div class="content">
                                        @item.PostTitel
                                    </div>
                                </h4>

                        </div>
                  


                }


                </div>
            <div id="wrapper" style="text-align:center">
                <div class="ui raised segment navigationbullets" style="text-align:center;display:inline-block;">



                </div>

            </div>
            </div>


</div>
  </div>
